<h1>ブログ新規作成</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@blog) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
      <strong><%= f.label :title, "タイトル" %>
      <span class = "text-danger">（必須）</span></strong>
      <%= f.text_field :title, placeholder: "タイトル100文字以内", class: 'form-control' %>

      <strong><%= f.label :context, "本文" %>
      <span class = "text-danger">（必須）</span></strong>
      <%= f.text_area :context, rows: 10, placeholder: "本文30,000文字以内", class: 'form-control' %>
      
      <div class="avatar mt-3">
        <%= f.label :avatar, "画像：" %>
        <%= f.file_field :avatar %>
      </div>

      <%= f.submit "ブログを投稿する", class: "mt-3 btn btn-primary" %>
    <% end %>
    
    <br><%= link_to 'ブログ一覧をみる', blogs_path %>
    <br><%= link_to 'トップページに戻る', root_path %>
  </div>
</div>
