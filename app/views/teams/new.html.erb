<h1>チーム新規作成</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@team) do |f| %>
    
    <%#= render 'shared/error_messages' %>
 
      <strong><%= f.label :name, "チーム名" %>
      <span class = "text-danger">（必須）</span></strong>
      <%= f.text_field :name, placeholder: "チーム名を記入", class: 'form-control' %>

      <strong>
        競技：<%= f.collection_select(:sport_id, Sport.all, :id, :name, { class: "form-control select2-search btn btn-outline-secondary dropdown-toggle"}) %>
      </strong>

      <strong>
        開催エリア：<%= f.collection_select(:prefecture_id, Prefecture.all, :id, :name, { class: "form-control select2-search btn btn-outline-secondary dropdown-toggle"}) %>
      </strong>

      <strong><%= f.label :context, "本文" %>
      <span class = "text-danger">（必須）</span></strong>
      <%= f.text_area :context, rows: 10, placeholder: "紹介文（10,000文字以内）", class: 'form-control' %>

      <%= f.submit "新規チームを登録する", class: "mt-3 btn btn-primary" %>
    <% end %>
  </div>
</div>